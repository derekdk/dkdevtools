{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint (ruff)",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["-m", "ruff", "check", "."]
    },
    {
      "label": "Format (ruff)",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["-m", "ruff", "format", "."]
    },
    {
      "label": "Test (pytest)",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["-m", "pytest", "-q"]
    }
  ]
}
